<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- TextView: Số điện thoại (10 số) -->

    <!-- Layout chứa hai TextView ngày tạo nằm ngang -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="12345678910"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomerPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="9"
            android:textStyle="bold"
            android:paddingRight="16dp"
            android:gravity="right"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- TextView: Ngày tạo 1 -->
        <TextView
            android:id="@+id/tvCreationDate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày tạo 1"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- TextView: Ngày tạo 2 -->
        <TextView
            android:id="@+id/tvCreationDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày tạo 2"
            android:paddingRight="16dp"
            android:gravity="right"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- TextView: Ghi chú -->
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghi chú"
        android:textColor="#666666"
        android:textSize="16sp" />

</LinearLayout>
